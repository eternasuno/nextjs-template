{
  "compilerOptions": {
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "fmt": {
    "singleQuote": true
  },
  "imports": {
    "@/": "./",
    "@hono/hono": "jsr:@hono/hono@^4.0.0",
    "@jmespath-community/jmespath": "npm:@jmespath-community/jmespath@^1.1.3",
    "@std/assert": "jsr:@std/assert@^1.0.1",
    "@std/async": "jsr:@std/async@^1.0.1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0"
  },
  "tasks": {
    "dev": "export DENO_ENV=development && deno run --allow-net --allow-env --allow-read --watch index.ts",
    "lint": "deno fmt && deno check **/*.ts & deno lint",
    "start": "deno run --allow-net --allow-env --allow-read index.ts"
  },
  "unstable": [
    "kv"
  ]
}
