{
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "[javascript]": {
        "editor.codeActionsOnSave": ["source.fixAll.eslint"],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.codeActionsOnSave": ["source.fixAll.eslint"],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.codeActionsOnSave": ["source.fixAll.eslint"],
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
