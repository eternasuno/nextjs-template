{
    "name": "koa-template",
    "version": "1.0.0",
    "description": "A koa template with typescript",
    "scripts": {
        "build": "del-cli --force dist && tsc",
        "start": "NODE_ENV=production node ./dist/app.js",
        "dev": "NODE_ENV=development nodemon src/app.ts",
        "lint": "eslint --fix src",
        "prettier": "prettier --write src"
    },
    "nodemonConfig": {
        "ignore": [
            "test/*",
            "docs/*"
        ],
        "watch": [
            "src"
        ],
        "execMap": {
            "ts": "ts-node"
        },
        "legacyWatch": true,
        "delay": "1000"
    },
    "license": "MIT",
    "private": false,
    "dependencies": {
        "@koa/router": "^12.0.0",
        "dotenv": "^16.0.3",
        "ioredis": "^5.3.2",
        "koa": "^2.14.2",
        "podcast": "^2.0.1"
    },
    "devDependencies": {
        "@types/koa": "^2.13.6",
        "@types/koa__router": "^12.0.0",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "del-cli": "^5.0.0",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.22",
        "prettier": "2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
